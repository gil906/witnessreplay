# Google AI Configuration
GOOGLE_API_KEY=your_gemini_api_key_here
GOOGLE_API_KEYS=key1,key2  # Optional: comma-separated for rotation

# Google Cloud
GCP_PROJECT_ID=your-gcp-project-id
GCS_BUCKET=witnessreplay-images
FIRESTORE_COLLECTION=reconstruction_sessions

# Application
ENVIRONMENT=production
DEBUG=false
ALLOWED_ORIGINS=http://localhost:8088,http://localhost:3000
PORT=8080
HOST=0.0.0.0

# Gemini Models
GEMINI_MODEL=gemini-3-flash
GEMINI_VISION_MODEL=gemini-3-flash
GEMINI_LITE_MODEL=gemini-2.5-flash-lite
GEMMA_MODEL=gemma-3-27b-it
IMAGEN_MODEL=imagen-4-fast-generate
EMBEDDING_MODEL=gemini-embedding-001
TTS_MODEL=gemini-2.5-flash-preview-tts
LIVE_MODEL=gemini-2.5-flash-exp-native-audio-thinking

# Rate Limiting Configuration
ENFORCE_RATE_LIMITS=true
MAX_REQUESTS_PER_MINUTE=60

# Session Configuration
SESSION_TIMEOUT_MINUTES=60
MAX_SESSION_SIZE_MB=100

# Security
ADMIN_PASSWORD=change_this_password_immediately

# Database
DATABASE_PATH=/app/data/witnessreplay.db
